<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/help" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    

    <TextView android:textAppearance="?android:attr/textAppearanceSmall" 
              android:layout_height="wrap_content" 
              android:id="@+id/textViewHelp" android:layout_width="wrap_content" 
              android:text="@string/helpText">
    </TextView>
    <Button android:layout_gravity="center_horizontal" 
            android:text="Ok" android:id="@+id/buttonClose" 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"></Button>


</LinearLayout>
